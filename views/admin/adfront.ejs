<%- include('../includes/head.ejs')%>
</head>

<body>
    <%- include('../includes/nav.ejs')%>  

    <main>

        <% if( stf.length > 0){ %>
            <%for (let stuff of stf) {%>
         <div class="grid">
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= stuff.title%></h1>
                </header>
                <div class="card__image">
                    <img src="<%= stuff.url%>" alt="<%= stuff.title%>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= stuff.price%></h2>
                    <p class="product__description"><%= stuff.desc%></p>
                </div>
                <div class="card__actions">
                    <a href="/admin/edit-product/<%= stuff.id%>?edit=true" class="btn">Edit</a>
                    <form action="/admin/delete-product" method = 'POST'>
                        <input type = "hidden" value="<%=stuff.id%>" name = "stuffId">
                        <button class="btn" type = "submit">Delete</button>    
                    </form>
                </div>
            </article>
        </div> 

        <%}%>
        <%}else{%>
            <h1> no stuff here</h1>
            <%}%>
    </main>
    <%- include('../includes/end.ejs')%>  